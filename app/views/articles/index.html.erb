<h1 class='text-center'>Blog</h1>
<br>
<% @articles.each do |article| %>
  <div id="article-<%= article.id %>" class="article jumbotron p-4 p-md-5 text-white rounded bg-dark" style='background-image: url("<%= article.image %>"); background-position: right; background-size: 600px;' >
     <div class="col-md-6 px-0">
       <h2 class="display-4 font-italic"><%= article.title %></h2>
       <p class="lead my-3"><%= article.description %></p>
       <p class="lead mb-0"><%= link_to "Continue Reading...", article.medium_link, class:"text-white font-weight-bold", target: :_blank  %></p>
     </div>
   </div>
<% end %>
